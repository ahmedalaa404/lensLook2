
@model ModelLoginAndRegister

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LensLook</title>

    <link href="~/css/home.css" rel="stylesheet" />
    <link href="~/css/AboutUs.css" rel="stylesheet" />
    <link href="~/css/services.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/js/all.min.js"
            integrity="sha512-u3fPA7V8qQmhBPNT5quvaXVa1mnnLSXUep5PS1qo5NRzHwG19aHmNJnj1Q8hpA/nBWZtZD4r4AX6YOt5ynLN2g=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="~/css/Home.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/photos/logo.png" alt="" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="fa-solid fa-bars-staggered"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav m-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link p-2 p-lg-3" aria-current="page" asp-controller="Home"
                           asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link p-2 p-lg-3" asp-controller="Home" asp-action="index" id="AboutUs">
                            About
                            Us
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link p-2 p-lg-3" asp-controller="Home" asp-action="Service">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link p-2 p-lg-3" asp-action="store" asp-controller="Home">Store</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link p-2 p-lg-3" href="appointment.html">Appointment</a>
                    </li>
                    <li class="nav-item dropdown p-2 p-lg-2">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            pages
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-controller="Home" asp-action="OurDoctors">Our Doctors</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider" />
                            </li>
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="FAQ">FAQ</a></li>
                            <li>
                                <hr class="dropdown-divider" />
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Reviews">Reviews</a>
                            </li>
                        </ul>
                    </li>
                </ul>


                <div>

                    <a class="btn main-btn" id="show-login" data-bs-toggle="modal" data-bs-target="#loginPopup"
                       asp-action="login" asp-controller="account">
                        Login
                    </a>



                    <button class="btn main-btn" data-bs-toggle="modal" data-bs-target="#registrationPopup">
                        Sign Up
                    </button>
                </div>






            </div>
        </div>
    </nav>

    <!-- Main content wrapped in a content container -->
    <div class="content">
        @RenderBody()
    </div>










    <div class="modal fade"
         id="loginPopup"
         tabindex="-1"
         aria-labelledby="loginPopupLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="loginPopupLabel">Login</h3>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="RegisterOrLogin" method="post" asp-controller="Account">
                        <div class="mb-3">
                            <label asp-for="ModelLogin.Email" class="form-label fw-bold">Email</label>
                            <input asp-for="ModelLogin.Email" class="form-control" placeholder="Enter your Email" required />
                            <span asp-validation-for="ModelLogin.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ModelLogin.Password" class="form-label fw-bold">Password</label>
                            <input asp-for="ModelLogin.Password" class="form-control" placeholder="Enter your password" required />
                            <span asp-validation-for="ModelLogin.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="ModelLogin.RememberMe" class="form-check-input" />
                            <label asp-for="ModelLogin.RememberMe" class="form-check-label">Remember Me</label>
                        </div>
                        <button type="submit" class="btn main-btn ms-0 mb-3">Login</button>
                        <a asp-action="ForgetPassword" asp-controller="account" class="btn btn-danger">Forgot Password?</a>
                        <hr />


                    </form>
                    <p>Don't have an account? <a asp-action="Register">Sign Up</a></p>

                </div>
            </div>
        </div>
    </div>




    <div class="modal fade"
         id="registrationPopup"
         tabindex="-1"
         aria-labelledby="registrationPopupLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="registrationPopupLabel">Sign Up</h3>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="RegisterOrLogin" method="post" asp-controller="Account">
                        <div class="mb-3">
                            <label asp-for="ModelRegister.FirstName" class="form-label fw-bold">First Name</label>
                            <input asp-for="ModelRegister.FirstName" class="form-control" placeholder="Enter your first name" required />
                            <span asp-validation-for="ModelRegister.FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ModelRegister.LastName" class="form-label fw-bold">Last Name</label>
                            <input asp-for="ModelRegister.LastName" class="form-control" placeholder="Enter your last name" required />
                            <span asp-validation-for="ModelRegister.LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ModelRegister.Email" class="form-label fw-bold">Email</label>
                            <input asp-for="ModelRegister.Email" class="form-control" placeholder="Enter your email" required />
                            <span asp-validation-for="ModelRegister.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ModelRegister.DateOfBirth" class="form-label fw-bold">Date of Birth</label>
                            <input asp-for="ModelRegister.DateOfBirth" class="form-control" required />
                            <span asp-validation-for="ModelRegister.DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ModelRegister.Password" class="form-label fw-bold">Password</label>
                            <input asp-for="ModelRegister.Password" class="form-control" placeholder="Enter your password" required />
                            <span asp-validation-for="ModelRegister.Password" class="text-danger"></span>
                            <div class="form-text">Password must be at least 8 characters long, including a combination of uppercase and lowercase letters, numbers, and symbols.</div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ModelRegister.ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                            <input asp-for="ModelRegister.ConfirmPassword" class="form-control" placeholder="Confirm your password" required />
                            <span asp-validation-for="ModelRegister.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="ModelRegister.IsActive" class="form-check-input" required />
                            <label asp-for="ModelRegister.IsActive" class="form-check-label">I agree to the Terms and Conditions</label>
                            <a href="#">(link to Terms and Conditions)</a>
                        </div>
                        <button type="submit" class="btn main-btn ms-0 mb-3" id="show-login"
                                data-bs-toggle="modal"
                                data-bs-target="#loginPopup">
                            Sign Up
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>






















    <footer class="footer">
        <div>
            <div class="row">
                <div class="col ms-5">
                    <img src="~/photos/white logo.png" alt="Company Logo" class="img-fluid mb-3" />
