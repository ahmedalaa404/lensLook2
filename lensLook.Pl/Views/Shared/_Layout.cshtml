                @{

                    if (!User.Identity.IsAuthenticated)
                    {

                        <a class="btn main-btn"
                           id="show-login"
                           data-bs-toggle="modal"
                           data-bs-target="#loginPopup"
                        @* asp-action="login" asp-controller="account" *@>
                            Login
                        </a>



                        <button class="btn main-btn"
                                data-bs-toggle="modal"
                                data-bs-target="#registrationPopup">
                            Sign Up
                        </button>
                    }

                    else
                    {
                        <a class="btn" asp-action="SignOut" asp-controller="account">
                            @User.Identity.Name
                            <i class="fa-solid fa-right-from-bracket"></i>
                        </a>


                        <a asp-action="Cart" asp-controller="Basket">
                            <i class="fa-solid fa-cart-shopping"></i>
                        </a>

                    }

                    if (User.Identity.IsAuthenticated)
                    {
                        var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                        <h4>@BasketRepo.GetCountBasketItems(userId)</h4>

                    }



                }

                


            </div>
