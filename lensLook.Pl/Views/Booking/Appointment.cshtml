@model List<Booking>

@{


    Layout = "_LayoutWithAuth";
}


<div class="container" style="max-width:none">

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Name Persone</th>
                <th>Email</th>
                <th>Number Phone</th>
                <th>Home Address</th>
                <th>Request Date</th>
                <th>AppointmentDate</th>
                <th>Reson</th>
                <th>Accept && Rejected</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.HomeAddres</td>
                    <td>@item.RequestDate</td>
                    <td>@item.AppointmentDate</td>
                    <td>@item.Reason</td>
                    <td>
                        <a asp-route-id="@item.BookingId" class="btn btn-success" asp-action="AcceptRequest" asp-controller="Booking">Accept </a>
                        <a asp-route-id="@item.BookingId" class="btn btn-danger" asp-action="RejectedRequest" asp-controller="Booking">Rejected </a>


                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>