@model ForgetPasswordVM
@{
    ViewData["Title"] = "ForgetPassword";
}
@{
    Layout = "_Layout";
}

  <div
      class="modal fade"
      id="forgotPasswordPopup"
      tabindex="-1"
      aria-labelledby="forgotPasswordPopupLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title" id="forgotPasswordPopupLabel">
              Forgot Password
            </h3>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form asp-action="SendEmail">
              <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"
                  >Email Address</label>
                <input
                  type="email"
                  class="form-control"
                  asp-for="Email"
                  aria-describedby="emailHelp"
                  placeholder="Enter your email address"
                  required
                />
               <span asp-validation-for="Email" class="text-danger"></span>
              </div>
              <button type="submit" class="btn main-btn ms-0 mb-3">
                <a href="" id="newPasswordPopuplink" data-bs-toggle="modal" data-bs-target="#newPasswordPopup" style="text-decoration: none; color: white">Send Reset Link</a>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

